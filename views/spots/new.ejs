<%- include('../partials/header') %>
    <title>Add a Fishing Spot</title>
</head>
<body>
    <h1>Add a New Fishing Spot</h1>

    <form action="/spots" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required>

        <label for="fishSpecies">Available Fish Species:</label>
        <input type="text" id="fishSpecies" name="fishSpecies" required>

        <button type="submit">Add Spot</button>
    </form>

    <a href="/">Back to Fishing Spots</a>


