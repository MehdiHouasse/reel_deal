<%- include('../partials/header') %>

    <h1>Edit The Fishing Spot</h1>

   <form action="/spots/<%= spot._id %>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= spot.name %>" required>

        <label for="location">Location:</label>
        <input type="text" id="location" value="<%= spot.location %>" name="location" required>

                <label for="description">Description:</label>
        <input type="text" id="description" value="<%= spot.location %>" name="description" required>



        <button type="submit">Update Spot</button>
    </form>

    <a href="/">Back to Fishing Spots</a>

